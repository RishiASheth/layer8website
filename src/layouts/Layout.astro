---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{title} | Layer8</title>

  <style>
    /* ---------- RESET ---------- */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :root {
      --bg: #05060f;
      --panel: rgba(15, 18, 35, 0.85);
      --text: #e6e9ff;
      --muted: #9aa2ff;
      --neon1: #7f7cff;
      --neon2: #00ffe0;
      --border: rgba(127, 124, 255, 0.35);
    }

    body {
      font-family: system-ui, -apple-system, sans-serif;
      background: radial-gradient(circle at top, #10153a, var(--bg));
      color: var(--text);
      line-height: 1.6;
    }

    /* ---------- HEADER ---------- */
    header {
      position: sticky;
      top: 0;
      z-index: 100;
      background: linear-gradient(
        135deg,
        rgba(127,124,255,0.25),
        rgba(0,255,224,0.15)
      );
      backdrop-filter: blur(14px);
      border-bottom: 1px solid var(--border);
      box-shadow: 0 10px 40px rgba(0,0,0,0.4);
    }

    nav {
      max-width: 1200px;
      margin: auto;
      padding: 1.2rem 2rem;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    nav h1 {
      font-size: 1.4rem;
      letter-spacing: 0.2em;
      font-weight: 700;
      background: linear-gradient(135deg, var(--neon1), var(--neon2));
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      text-shadow: 0 0 15px rgba(127,124,255,0.6);
    }

    nav ul {
      list-style: none;
      display: flex;
      gap: 2.2rem;
    }

    nav a {
      color: var(--text);
      text-decoration: none;
      font-weight: 500;
      position: relative;
      transition: color 0.3s ease;
    }

    nav a::after {
      content: "";
      position: absolute;
      left: 0;
      bottom: -6px;
      width: 0;
      height: 2px;
      background: linear-gradient(90deg, var(--neon1), var(--neon2));
      transition: width 0.3s ease;
      box-shadow: 0 0 10px rgba(0,255,224,0.8);
    }

    nav a:hover {
      color: var(--neon2);
    }

    nav a:hover::after {
      width: 100%;
    }

    /* ---------- MAIN ---------- */
    main {
      max-width: 1200px;
      margin: auto;
      padding: 4rem 2rem;
      min-height: calc(100vh - 240px);
    }

    /* ---------- FOOTER ---------- */
    footer {
      background: linear-gradient(
        180deg,
        rgba(15,18,35,0.8),
        rgba(5,6,15,1)
      );
      border-top: 1px solid var(--border);
      text-align: center;
      padding: 2.5rem 1rem;
      color: var(--muted);
    }

    footer p {
      font-size: 0.95rem;
      letter-spacing: 0.1em;
    }

    footer span {
      color: var(--neon2);
      text-shadow: 0 0 10px rgba(0,255,224,0.7);
    }

    /* ---------- RESPONSIVE ---------- */
    @media (max-width: 768px) {
      nav ul {
        gap: 1.4rem;
      }

      nav h1 {
        font-size: 1.2rem;
      }
    }
  </style>
</head>

<body>
  <header>
    <nav>
      <h1>Layer8</h1>
      <ul>
        <li><a href="/">Home</a></li>
        <li><a href="/events">Events</a></li>
        <li><a href="/team">Team</a></li>
        <li><a href="/blog">Blog</a></li>
      </ul>
    </nav>
  </header>

  <main>
    <slot />
  </main>

  <footer>
    <p>Built in the <span>Layer8</span> Grid</p>
  </footer>
</body>
</html>
